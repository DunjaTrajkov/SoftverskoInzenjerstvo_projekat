@model WebApplication5.Models.Korisnik

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    <title>Registrovanje</title>
    <link rel="shortcut icon" href="~/images/grape-icon.png" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/images/grape-icon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/css/RegForma.css" />

</head>
<body>

    <div class="prijava-form">
        <form asp-action="Registrovanje" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h2 id="h2moj">Registruj se</h2>
            <p id="pmoj">Molimo popunite polja radi kreiranja naloga!</p>
            <hr>
            <div class="form-group">
                <div class="row">
                    @*<input asp-for="Idkorisnika" type="hidden" />*@
                    <div class="col-xs-6">
                        <label id="mojaLabela" asp-for="Ime" class="control-label"></label>
                        <input id="intext" asp-for="Ime" class="form-control" name="Ime" placeholder="Ime" required="required" />
                        <span id="crvenaZaValid" asp-validation-for="Ime" class="text-danger"></span>
                    </div>
                    <div class="col-xs-6">
                        <label id="mojaLabela" asp-for="Prezime" class="control-label"></label>
                        <input id="intext" asp-for="Prezime" class="form-control" name="Prezime" placeholder="Prezime" />
                        <span id="crvenaZaValid" asp-validation-for="Prezime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label id="mojaLabela" asp-for="Email" class="control-label"></label>
                <input id="intext" asp-for="Email" class="form-control" placeholder="Email" required="required" />
                <span id="crvenaZaValid" asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="mojaLabela" asp-for="Username" class="control-label"></label>
                <input id="intext" asp-for="Username" class="form-control" placeholder="Korisnicko ime" required="required" />
                <span id="crvenaZaValid" asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label id="mojaLabela" asp-for="Sifra" class="control-label"></label>

                <input id="intext" asp-for="Sifra" class="form-control" name="Sifra" placeholder="Sifra" require="required" />
                @*<input type="checkbox"  onclick="op => PrikazSifru()"/?*@


                <span id="crvenaZaValid" asp-validation-for="Sifra" class="text-danger"></span>
            </div>

          

            <div class="form-group">
                <label id="mojaLabela" asp-for="BrojTelefona" class="control-label"></label>
                <input id="intext" asp-for="BrojTelefona" class="form-control" placeholder="Broj telefona" required="required" />
                <span id="crvenaZaValid" asp-validation-for="BrojTelefona" class="text-danger"></span>
            </div>
         
        

            <div class="form-group ">
                <button type="submit" class="btn" asp-area="" asp-controller="User" asp-action="Registrovanje">Registruj se</button>
            </div>
            <div class="form-group">
                <a class="btn btn-danger" name="Na pocetnu stranu" asp-area="" asp-controller="Home" asp-action="Index" role="button">Na pocetnu stranu</a>
            </div>

            <div class="hint-text form-group-sm">Imate nalog? <a id="text" asp-action="PrijaviSe">Ulogujte se ovde</a></div>


        </form>

    </div>




    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
