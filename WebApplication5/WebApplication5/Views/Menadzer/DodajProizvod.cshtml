@model WebApplication5.Models.Proizvod

@{
    ViewData["Title"] = "Kreiraj novi proizvod";
}


@*Dobro bi bilo da se postavi neka slika u pozadini kao neki sto ili tako nesto*@
<div class="proizvodi-body">
    <div class="container">
        <h1> <b>Dodaj novi proizvod</b></h1>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="DodajProizvod">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Naziv" class="control-label"></label>
                        <input asp-for="Naziv" class="form-control" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label"></label>
                        <input asp-for="Opis" class="form-control" />
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tip" class="control-label"></label>

                        <select asp-for="Tip">
                            <option value="0">Hrana</option>
                            <option value="1">Dekoracija</option>
                        </select>
                        @*<input asp-for="Tip" class="form-control" />*@
                        <span asp-validation-for="Tip" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="VrstaDekoracije" class="control-label"></label>
                        <input asp-for="VrstaDekoracije" class="form-control" required="required" />
                        @*<span asp-validation-for="VrstaDekoracije" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Boja" class="control-label"></label> @*odredite da li da ima odredjene boje ili da si unosi proizvoljno *@
                        <input asp-for="Boja" class="form-control" />
                        <span asp-validation-for="Boja" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CenaDekoracije" class="control-label"></label>
                        <input asp-for="CenaDekoracije" class="form-control" />
                        <span asp-validation-for="CenaDekoracije" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="VrstaObroka" class="control-label"></label>
                        <input asp-for="VrstaObroka" class="form-control" />
                        <span asp-validation-for="VrstaObroka" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gramaza" class="control-label"></label>
                        <input asp-for="Gramaza" class="form-control" />
                        <span asp-validation-for="Gramaza" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CenaPorcije" class="control-label"></label>
                        <input asp-for="CenaPorcije" class="form-control" />
                        <span asp-validation-for="CenaPorcije" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Dodaj sliku</label>
                        <div class="btn btn-mdb-color btn-rounded float-left">
                            <input type="file" asp-for="PutanjaDoSlike" class="form-control" />
                        </div>
                        <span asp-validation-for="PutanjaDoSlike" class="text-danger"></span>
                    </div>

                    @*Modal za ucitavanje putanje slike*@
                    @*<form class="md-form">
                        <div class="file-field">
                            <div class="mb-4">
                                <img src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                                     class="rounded-circle z-depth-1-half avatar-pic" alt="example placeholder avatar">
                            </div>
                            <div class="d-flex justify-content-center">
                                <div class="btn btn-mdb-color btn-rounded float-left">
                                    <span>Add photo</span>
                                    <input type="file">
                                </div>
                            </div>
                        </div>
                    </form>*@

                    <div class="form-group">
                        <input type="submit" value="Dodaj proizvod" asp-area="" asp-controller="Menadzer" asp-action="DodajProizvod" class="promeni-link" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
