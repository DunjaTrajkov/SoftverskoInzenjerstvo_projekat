 @model WebApplication5.Models.Proizvod

@{
    ViewData["Title"] = "Proizvod za izmenu";
}

<h1> <i>Proizvod za izmenu</i></h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="PribaviProizvod">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Idproizvoda" />
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opis" class="control-label"></label>
                    <input asp-for="Opis" class="form-control" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select asp-for="Tip">
                        <option value="0">Hrana</option>
                        <option value="1">Dekoracija</option>
                    </select>
                    @*<label asp-for="Tip" class="control-label"></label>
            <input asp-for="Tip" class="form-control" />*@
                    <span asp-validation-for="Tip" class="text-danger"></span>
                </div>
                @if (Model.Tip == 1)
                {
                    <div class="form-group">
                        <label asp-for="VrstaDekoracije" class="control-label"></label>
                        <input asp-for="VrstaDekoracije" class="form-control" />
                        <span asp-validation-for="VrstaDekoracije" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Boja" class="control-label"></label>
                        <input asp-for="Boja" class="form-control" />
                        <span asp-validation-for="Boja" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CenaDekoracije" class="control-label">Cena dekoracije</label>
                        <input asp-for="CenaDekoracije" class="form-control" />
                        <span asp-validation-for="CenaDekoracije" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label asp-for="VrstaObroka" class="control-label">Vrsta obroka</label>
                        <input asp-for="VrstaObroka" class="form-control" />
                        <span asp-validation-for="VrstaObroka" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gramaza" class="control-label"></label>
                        <input asp-for="Gramaza" class="form-control" />
                        <span asp-validation-for="Gramaza" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CenaPorcije" class="control-label">Cena porcije</label>
                        <input asp-for="CenaPorcije" class="form-control" />
                        <span asp-validation-for="CenaPorcije" class="text-danger"></span>
                    </div>
                }
                    <div class="form-group">
                   
                        <img alt="Slika" class="img-thumbnail" height="120" src="@Model.PutanjaDoSlike" />
                      
                       
                    </div>
                <div class="form-group">
                    <label>Izmeni sliku</label>
                    <div class="btn btn-mdb-color btn-rounded float-left">

                        <input type="file" asp-for="PutanjaDoSlike" class="form-control" />
                    </div>
                    
                </div>

                <div class="form-group">
                    <input type="submit" value="Sacuvaj izmene" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Proizvodi">Vrati se listi</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
