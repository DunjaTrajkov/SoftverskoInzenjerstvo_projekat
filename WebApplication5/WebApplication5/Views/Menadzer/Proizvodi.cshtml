        <div class="row">
            <p>
                <a class="promeni-link" asp-area="" asp-controller="Menadzer" asp-action="DodajProizvod">Dodaj novi proizvod</a>
            </p>

            <p>
                <a class="promeni-link" asp-action="DodajMeni" asp-controller="Menadzer">Dodaj novi meni/katalog</a>
            </p>
        </div>
      
