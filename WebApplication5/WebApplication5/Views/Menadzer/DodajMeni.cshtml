@model WebApplication5.Models.Katalog

    <div class="row align-content-center">
        <div class="col-md-4">
        <div class="col-md-4">
            <form asp-action="DodajMeni">

                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Kreiraj meni" asp-action="DodatMeni" asp-controller="Menadzer" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
